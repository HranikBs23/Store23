@model Store23.Models.CoverType


<h1>Edit Book</h1>

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Covertype</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="Id" />

		<div class="mb-3">
			<label asp-for="Name"> Cover Type Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
		<a asp-controller="CoverType" asp-action="Index" class="btn btn-danger" style="width:150px">
			Back to List
		</a>
	</div>
</form>



@section Scripts{
	@{
		//client side validation
		<partial name="_ValidationScriptsPartial" />
	}
}