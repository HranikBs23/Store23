@model Store23.Models.CoverType




<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-dark">Create Cover Type</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name" class="fw-bold">Cover Type Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="CoverType" asp-action="Index" class="btn btn-danger" style="width:150px">
			Back to List
		</a>
	</div>
</form>



@section Scripts{
	@{
		//client side validation
		<partial name="_ValidationScriptsPartial" />
	}
}